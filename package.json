{
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"bin": {
		"smartfolder": "bin/smartfolder.js"
	},
	"files": [
		"dist",
		"src",
		"bin"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}

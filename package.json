{
	"version": "0.1.0",
	"license": "MIT",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"bin": {
		"smartfolder": "bin/smartfolder.js"
	},
	"files": [
		"dist",
		"src",
		"bin"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"name": "smartfolder",
	"author": "Manish Chiniwalar",
	"module": "dist/smartfolder.esm.js",
	"size-limit": [
		{
			"path": "dist/smartfolder.cjs.production.min.js",
			"limit": "500 KB",
			"ignore": ["fs", "path", "os", "crypto", "stream", "util", "assert", "tty", "worker_threads", "pdf-parse", "node:fs/promises", "node:stream", "node:path", "readdirp"]
		},
		{
			"path": "dist/smartfolder.esm.js",
			"limit": "500 KB",
			"ignore": ["fs", "path", "os", "crypto", "stream", "util", "assert", "tty", "worker_threads", "pdf-parse", "node:fs/promises", "node:stream", "node:path", "readdirp"]
		}
	],
	"dependencies": {
		"@ai-sdk/openai": "^2.0.67",
		"@ai-sdk/vercel": "beta",
		"ai": "beta",
		"pino": "^10.1.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@size-limit/preset-small-lib": "^11.2.0",
		"@types/fluent-ffmpeg": "^2.1.28",
		"@types/pdf-parse": "^1.1.5",
		"husky": "^9.1.7",
		"pino-pretty": "^11.2.0",
		"size-limit": "^11.2.0",
		"tsdx": "^0.14.1",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3"
	},
	"optionalDependencies": {
		"exifr": "^7.1.3",
		"fluent-ffmpeg": "^2.1.3",
		"music-metadata": "^11.10.1",
		"node-stream-zip": "^1.15.0"
	}
}
